<div class="banner"
     style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://i.pinimg.com/564x/58/52/87/5852877845ad9f503de6b92507e457b4.jpg)" >
  <div class="container text-light">
    <h1>Movie categories 📽️🎬</h1>
    <p>Create your own movie categories and add your favoriest movies to them</p>
    <div class="buttons d-flex felx-row justify-content-left">
      <%= link_to new_list_path, class: "btn btn-flat text-light mx-3" do %>
       <i class="fa-solid fa-plus" style="color: #fff5f5;"></i> Add a category
      <% end %>
    </div>
  </div>
</div>
<div class="container cards my-4">
  <% @lists.each do |list| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
      <%= link_to list.name, list_path(list), class: "text-decoration-none text-light" %>
    </div>
  <% end %>
</div>
