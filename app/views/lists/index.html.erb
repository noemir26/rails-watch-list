<div class="banner"
     style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_path('cine_banner.png') %>)" >
  <div class="container text-light">
    <h1>Movie categories 📽️🎬</h1>
    <p>Create your own movie categories and add your favoriest movies to them</p>
    <div class="buttons d-flex felx-row justify-content-left">
      <%= link_to new_list_path, class: "btn btn-flat text-light mx-3" do %>
       <i class="fa-solid fa-plus" style="color: #fff5f5;"></i> Add a category
      <% end %>
    </div>
  </div>
</div>
<div class="container cards my-4">
  <% @lists.each do |list| %>
     <% if list.photo.attached? %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path(list.photo.key, width: 400, height: 300, crop: :fill) %>')">
        <%= link_to list.name, list_path(list), class: "text-decoration-none text-light" %>
        <%= link_to list_path(list), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to remove #{list.name}" } do %>
          <i class="fa-regular fa-trash-can m-2" style="color: #f0ffff;"></i>
        <% end %>
      </div>
      <% else %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://miro.medium.com/v2/resize:fit:4800/format:webp/1*PmGgpPjyEfyQ0aJye4feDg.jpeg')">
          <%= link_to list.name, list_path(list), class: "text-decoration-none text-light" %>
          <%= link_to list_path(list), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to remove #{list.name}" } do %>
            <i class="fa-regular fa-trash-can m-2" style="color: #f0ffff;"></i>
          <% end %>
        </div>
    <% end %>
  <% end %>
</div>
